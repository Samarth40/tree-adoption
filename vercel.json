{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "^/api/(.*)",
      "dest": "/api/index.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"]
    },
    {
      "src": "^/health",
      "dest": "/api/index.js"
    },
    {
      "src": "^/assets/(.*)",
      "dest": "/assets/$1",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "^/(.*)\\.([a-zA-Z0-9]{2,})$",
      "dest": "/$1.$2",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "^/.*",
      "dest": "/index.html",
      "headers": {
        "cache-control": "public, max-age=0, must-revalidate",
        "Content-Security-Policy": "default-src 'self' https://*.stripe.com https://*.m.stripe.com https://*.cloudinary.com https://api.openrouter.ai; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://*.stripe.com https://*.m.stripe.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: https: blob:; connect-src 'self' https://*.stripe.com https://*.m.stripe.com https://*.cloudinary.com https://api.openrouter.ai https://firestore.googleapis.com wss://*.firebaseio.com; frame-src 'self' https://*.stripe.com https://*.m.stripe.com;",
        "X-Frame-Options": "SAMEORIGIN",
        "X-Content-Type-Options": "nosniff"
      }
    }
  ],
  "env": {
    "VITE_API_URL": "@vite_api_url",
    "STRIPE_SECRET_KEY": "@stripe_secret_key",
    "CLOUDINARY_CLOUD_NAME": "@cloudinary_cloud_name",
    "CLOUDINARY_API_KEY": "@cloudinary_api_key",
    "CLOUDINARY_API_SECRET": "@cloudinary_api_secret",
    "CLOUDINARY_UPLOAD_PRESET": "@cloudinary_upload_preset",
    "VITE_NFT_CONTRACT_ADDRESS": "@vite_nft_contract_address"
  }
} 